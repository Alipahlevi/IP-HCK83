{
  "name": "mealprepmate-server",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --setupFilesAfterEnv=./test/setup.js",
    "test:watch": "jest --watch --setupFilesAfterEnv=./test/setup.js",
    "test:coverage": "jest --coverage --setupFilesAfterEnv=./test/setup.js --runInBand --forceExit",
    "test:coverage:clean": "jest --coverage --setupFilesAfterEnv=./test/setup.js --runInBand --forceExit --clearCache",
    "db:create": "sequelize db:create",
    "db:migrate": "sequelize db:migrate",
    "db:seed": "sequelize db:seed:all",
    "db:reset": "sequelize db:drop && sequelize db:create && sequelize db:migrate && sequelize db:seed:all"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "helpers/**/*.js",
      "middlewares/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "!models/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "discord-oauth2": "^2.12.1",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "google-auth-library": "^9.15.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.0",
    "sequelize": "^6.37.7",
    "supertest": "^7.1.1"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
